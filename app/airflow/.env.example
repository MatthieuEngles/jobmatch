# ===================================
# AIRFLOW CONFIGURATION TEMPLATE
# ===================================
# Copiez ce fichier vers .env et remplissez vos valeurs
# cp .env.example .env

# ===================================
# AIRFLOW SYSTEM
# ===================================
# UID de votre utilisateur Linux (obtenu avec : echo $(id -u))
AIRFLOW_UID=50000

# Chemin ABSOLU vers le dossier airflow sur votre machine
# Exemple: /home/votre_username/jobmatch/app/airflow
HOST_AIRFLOW_PATH=/home/VOTRE_USERNAME/jobmatch/app/airflow

# ===================================
# AIRFLOW WEB UI CREDENTIALS
# ===================================
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# ===================================
# GOOGLE CLOUD CREDENTIALS
# ===================================
# Chemin relatif vers vos credentials GCP (à placer dans ./credentials/)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcp-service-account-key.json

# ===================================
# EMAIL NOTIFICATIONS (SMTP)
# ===================================
# Pour Gmail, créez un "App Password" : https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_STARTTLS=true
SMTP_SSL=false
SMTP_PORT=587
SMTP_USER=votre.email@gmail.com
SMTP_PASSWORD=votre_app_password_gmail
SMTP_MAIL_FROM=votre.email@gmail.com

# ===================================
# GCP VM AUTO-SHUTDOWN (OPTIONNEL)
# ===================================
# Permet d'éteindre automatiquement la VM après succès du pipeline
GCP_VM_NAME=votre-vm-name
GCP_VM_ZONE=europe-west9-b

# ===================================
# FRANCE TRAVAIL API (pour offre-ingestion)
# ===================================
# Ces variables sont utilisées par le pipeline offre-ingestion
FT_CLIENT_ID=votre_client_id
FT_CLIENT_SECRET=votre_client_secret
FT_SCOPE=api_offresdemploiv2 o2dsoffre
FT_OAUTH_URL=https://entreprise.francetravail.fr/connexion/oauth2/access_token?realm=/partenaire
FT_API_URL_BASE=https://api.francetravail.io/partenaire/offresdemploi/v2/offres/search
FT_ROMECODES_PATH=src/data_persist/rome_codes.txt

# ===================================
# GOOGLE CLOUD STORAGE
# ===================================
GCS_BUCKET=france-travail-bronze-offers
GCS_PREFIX=france_travail/offers
GCP_PROJECT_ID=jobmatch-482415

# ===================================
# LOCAL FILES
# ===================================
FT_OUTPUT_FILE=data/requete.json
